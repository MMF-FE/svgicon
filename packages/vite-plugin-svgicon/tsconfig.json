{
    "compilerOptions": {
        "target": "ES2017",
        "module": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist",
        "baseUrl": ".",
        "outDir": "dist",
        "lib": ["esnext"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
