{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "version": "independent",
    "packages": ["packages/*", "demo/*"],
    "command": {
        "publish": {
            "ignoreChanges": [
                "**/demo/**",
                "**/*.md",
                "**/tests/*",
                "**/*.map",
                "./docs/**"
            ]
        }
    }
}
